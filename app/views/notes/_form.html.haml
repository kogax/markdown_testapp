= form_for @note do |f|
  - if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field.form-group
    = f.label :body
    = f.text_area :body, :class => 'form-control'
  .actions
    = f.submit 'Save', :class => 'btn btn-primary'
